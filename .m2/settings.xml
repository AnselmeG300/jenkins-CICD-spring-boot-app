<settings>
    <pluginGroups>
        <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
    </pluginGroups>
    <profiles>
        <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <sonar.host.url>
                    https://sonarcloud.io
                </sonar.host.url>
                <sonar.coverage.exclusions>
                    **/exceptions/*
                </sonar.coverage.exclusions>
                <sonar.organization>anselmeg300</sonar.organization>
                <sonar.projectKey>AnselmeG300_jenkins-CICD-spring-boot-app</sonar.projectKey>
            </properties>
        </profile>
    </profiles>
</settings>

